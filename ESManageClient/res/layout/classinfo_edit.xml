<?xml version="1.0" encoding="utf-8"?>
<ScrollView
 android:layout_width="fill_parent" 
 android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/login"
	> 
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:stretchColumns="1">
	    <TableRow> 
			<TextView 
				android:text="班级编号："
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<TextView
				android:text="" 
				android:id="@+id/TV_classNumber" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow>

		<TableRow>
			<TextView 
				android:text="班级名称：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_className" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="所属专业：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<Spinner 
				android:id="@+id/Spinner_classSpecialFieldNumber" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="成立日期：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<DatePicker 
				android:id="@+id/dp_classBirthDate"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
			/>



		</TableRow> 
		<TableRow>
			<TextView 
				android:text="班主任：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_classTeacherCharge" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="联系电话：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_classTelephone" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
			/>
		</TableRow> 
		<TableRow>
			<TextView 
				android:text="附加信息：" 
				android:id="@+id/TextView"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:textColor="#0000ff" 
			/>
			<EditText 
				android:text="" 
				android:id="@+id/ET_classMemo" 
				android:layout_width="60dp"
				android:layout_height="wrap_content"
				android:inputType="textMultiLine"
				android:singleLine="false"
				android:scrollHorizontally="false"
			/>
		</TableRow> 
	</TableLayout>
	<LinearLayout 
		android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="50dp" 
		android:gravity="center">
		   <Button 
				android:text="确定" 
				android:id="@+id/BtnUpdate"
				android:layout_height="wrap_content" 
				android:layout_marginRight="50dp"
				android:layout_width="50dp"/> 
	</LinearLayout> 
  </LinearLayout>
</ScrollView>


