<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fb_background_login">
    <!-- padding 内边距   layout_margin 外边距
  		android:layout_alignParentTop 布局的位置是否处于顶部 -->
  		
  	<RelativeLayout 
  	    android:id="@+id/send_div"
  	    android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:padding="15dip"        
    	android:layout_margin="25dip" 
    	android:background="@drawable/background_login_div" >
  		<!-- 微博正文 -->
    	<TextView 
    		android:id="@+id/weibo_content_input"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentTop="true"
    		android:layout_marginTop="5dp"
    		android:text="@string/weibo_content"
    		style="@style/normalText"/>
    	<EditText 
    		android:id="@+id/weibo_content_edit"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:hint="@string/weibo_content_hint"
    		android:layout_below="@id/weibo_content_input"
    		android:singleLine="true"
    		android:inputType="text"/>
      
      <!-- 登录button -->
      <Button 
      	android:id="@+id/send_sina_button"
      	android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:layout_below="@id/weibo_content_edit"
      	android:layout_alignRight="@id/weibo_content_edit"
      	android:layout_marginRight="20dp"
      	android:text="@string/send_sina_weibo"
      	android:background="@drawable/blue_button" />
      
      
  	</RelativeLayout>
</LinearLayout>